<div class="container mt-4">
  <div class="row">
    <div class="col-lg-6 offset-lg-3">
      <div class="row">
        <div class="col-lg-6">
          <h1><%= @category.name %></h1>
        </div>
        <div class="col-lg-6">
          <h3 class="text-muted text-right"> <%= @lesson.words.count + 1 %> of <%= @category.words.count%></h3 >
        </div>
      </div>
      <div class="jumbotron">
        <h1 class="text-center"><strong><%= @lesson.next_word.content %></strong></h1>
        <% @lesson.next_word.word_answers.each do |word| %>
          <%= form_for([:lesson, @lesson.lesson_words.build]) do |f| %>
            <%= f.hidden_field :word_id, value: word.word_id %>
            <%= f.hidden_field :word_answer_id, value: word.id %>
            <%= f.submit word.content, class: 'btn btn-outline-dark btn-block mt-2' %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
