<div class="container mt-4">
  <% if flash[:notice] %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <div class="card">
    <div class="card-header">
      <div class="row">
        <div class="col-lg-6">
          <h3>Admin | Categories</h3>
        </div>
        <div class="col-lg-6">
          <%= link_to "Add Category", new_admin_category_path, class: 'btn btn-info pull-right' %>
        </div>
      </div>
    </div>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td>
              <%= link_to edit_admin_category_path(category), class: 'btn btn-rounded' do %>
                  <i class="fa fa-pencil-alt text-muted"></i>
              <% end %>
              <%= link_to admin_category_path(category),  method: :delete,
                                                          data: { confirm: 'Are you sure?' },
                                                          class: 'btn btn-rounded' do %>
                  <i class="fa fa-trash-alt text-muted"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
