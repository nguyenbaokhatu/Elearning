<div class="container mt-5">
  <div class="row">
    <div class="col-lg-3">
      <div class="card">
        <div class="card-body text-center">
          <div class="container">
            <%= user_avatar(@user, 'profile-avatar mx-auto d-block') %>
            <h5><%= @user.name %></h5>
            <hr>
            <div class="row">
              <div class="col-lg-12">
                <strong><%= link_to @user.words_learned, user_words_path(@user) %></strong>
                <div>Words learned</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-9">
      <div class="card">
        <div class="card-header">
          <div class="row">
            <div class="col-lg-4">
              <h6>Words Learned</h6>
              <%= form_tag(user_words_path, { method: 'get' , id: 'select_category'}) do %>
                <div class="form-group">
                  <%= select_tag :filter, options_from_collection_for_select(@categories, :id, :title, params[:filter]),
                                              include_blank: 'All',
                                              onchange: "$('#select_category').submit();",
                                              class: 'form-control' %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        <% if @lesson_words.any? %>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Word</th>
                <th>Correct Answer</th>
                <th>Your Answer</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @lesson_words.each do |lesson_word| %>
                <tr>
                  <td><%= lesson_word.word.content %></td>
                  <td><%= lesson_word.word.correct_word_answer.content %></td>
                  <td><%= lesson_word.word_answer.content %></td>
                  <td>
                    <% if word_answer.word.correct_word_answer.content == lesson_word.word_answer.content %>
                      <i class="fa fa-check" aria-hidden="true"></i>
                    <% else %>
                      <i class="fa fa-times" aria-hidden="true"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <div class="pagination justify-content-center">
            <%= paginate @lesson_words, window: 1 %>
          </div>
        <% else %>
          <h3 class="text-center text-muted p-3">Nothing to show</h3>
        <% end %>
      </div>
    </div>
  </div>
</div>
